<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ca.ualberta.cs.cmput301w15t04team04project.View.NoSwipeViewPager
        android:id="@+id/mainActivityPager"
        android:layout_width="fill_parent"
        android:layout_height="348dp"
        android:layout_weight="1.21" >
    </ca.ualberta.cs.cmput301w15t04team04project.View.NoSwipeViewPager>

    <RadioGroup
        android:id="@+id/mainActivityBottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:background="@drawable/toolbar_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/main_menu_button"
            style="@style/main_menu_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableTop="@drawable/home_icon"
            android:text="@string/menu_home" />

        <RadioButton
            android:id="@+id/add_menu_button"
            style="@style/main_menu_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/add_icon"
            android:text="@string/menu_add" />

        <RadioButton
            android:id="@+id/profile_menu_button"
            style="@style/main_menu_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/user_icon"
            android:text="@string/menu_profile" />
    </RadioGroup>

</LinearLayout>