<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.cmput301w15t04team04project.ItemDetailActivity" >

    <TextView
        android:id="@+id/showItemAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showItemNameCTextView"
        android:layout_alignRight="@+id/showItemNameCTextView"
        android:layout_below="@+id/showItemNameCTextView"
        android:layout_marginTop="15dp"
        android:text="Amount:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/showItemNameCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Item Name:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/currentItemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showItemAmountTextView"
        android:layout_centerHorizontal="true"
        android:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/showItemDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showItemAmountTextView"
        android:layout_alignRight="@+id/showItemNameCTextView"
        android:layout_below="@+id/showItemAmountTextView"
        android:layout_marginTop="15dp"
        android:text="Date:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/currentItemAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showItemAmountTextView"
        android:layout_alignBottom="@+id/showItemAmountTextView"
        android:layout_alignLeft="@+id/currentItemNameTextView"
        android:text="$ 998.00"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/currentItemDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showItemDateTextView"
        android:layout_alignBottom="@+id/showItemDateTextView"
        android:layout_alignLeft="@+id/currentItemAmountTextView"
        android:text="MMM-DD-YYYY"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/showItemCateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/showItemDateTextView"
        android:layout_below="@+id/showItemDateTextView"
        android:layout_marginTop="15dp"
        android:text="Category:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/currentItemCateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/showItemCateTextView"
        android:layout_alignLeft="@+id/currentItemDateTextView"
        android:text="Tranpotation"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/showDescripTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showItemCateTextView"
        android:layout_below="@+id/showItemCateTextView"
        android:layout_marginTop="15dp"
        android:text="Description:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/currentDescripTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showDescripTextView"
        android:layout_below="@+id/showDescripTextView"
        android:layout_marginTop="5dp"
        android:text="I have a lot of things to say: hahahahahahahahahahahahaha"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/currentRecieptImageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/showReTextView"
        android:layout_alignRight="@+id/currentDescripTextView"
        android:layout_below="@+id/showReTextView"
        android:src="@drawable/ic_reciept" />

    <TextView
        android:id="@+id/showReTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/currentDescripTextView"
        android:layout_below="@+id/currentDescripTextView"
        android:layout_marginTop="60dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioButton
        android:id="@+id/showFlagRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/currentRecieptImageView"
        android:layout_alignRight="@+id/currentRecieptImageView"
        android:layout_below="@+id/currentRecieptImageView"
        android:text="Incomplete" />

</RelativeLayout>
