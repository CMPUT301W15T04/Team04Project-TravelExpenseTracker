<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ca.ualberta.cs.cmput301w15t04team04project.XListView.NoSwipeViewPager
        android:id="@+id/editClaimActivityPager"
        android:layout_width="fill_parent"
        android:layout_height="348dp"
        android:layout_weight="1.21" >
    </ca.ualberta.cs.cmput301w15t04team04project.XListView.NoSwipeViewPager>

    <RadioGroup
        android:id="@+id/editClaimBottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:background="@drawable/toolbar_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/editClaimPrevious"
            style="@style/main_menu_bottom"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:checked="true"
            android:text="Basic Info" />

        <RadioButton
            android:id="@+id/editClaimNext"
            style="@style/main_menu_bottom"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="Advanced Info" />
    </RadioGroup>

</LinearLayout>