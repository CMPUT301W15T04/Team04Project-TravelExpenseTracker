<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/showClaimEDATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/showClaimSDATextView"
        android:layout_marginTop="15dp"
        android:text="End Date:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentClaimSDATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showClaimSDATextView"
        android:layout_alignBottom="@+id/showClaimSDATextView"
        android:layout_alignLeft="@+id/currentClaimNameATextView"
        android:text="MMM-DD-YYYY"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/addCommentsEditText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/showDestinationsAListView"
        android:layout_below="@+id/showDestinationsAListView"
        android:ems="10"
        android:hint="Add Some Comments"
        android:inputType="textMultiLine"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentClaimStatusATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showClaimStatusTextView"
        android:layout_alignBottom="@+id/showClaimStatusTextView"
        android:layout_alignLeft="@+id/currentClaimEDATextView"
        android:text="Submited"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/showClaimStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showClaimEDATextView"
        android:layout_below="@+id/showClaimEDATextView"
        android:layout_marginTop="10dp"
        android:text="Status:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/showClaimTagsATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showClaimStatusTextView"
        android:layout_below="@+id/showClaimStatusTextView"
        android:layout_marginTop="10dp"
        android:text="Tags:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <ListView
        android:id="@+id/showClaimTagsAListView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/showClaimTagsATextView"
        android:layout_below="@+id/showClaimTagsATextView" >
    </ListView>

    <TextView
        android:id="@+id/showDestinationsATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showClaimTagsAListView"
        android:layout_below="@+id/showClaimTagsAListView"
        android:layout_marginTop="10dp"
        android:text="Destinations:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <ListView
        android:id="@+id/showDestinationsAListView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/showDestinationsATextView"
        android:layout_below="@+id/showDestinationsATextView" >

    </ListView>

    <TextView
        android:id="@+id/showClaimSDATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showClaimEDATextView"
        android:layout_below="@+id/showClaimNameATextView"
        android:layout_marginTop="10dp"
        android:text="Start Date:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentClaimEDATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showClaimStatusTextView"
        android:layout_alignLeft="@+id/currentClaimSDATextView"
        android:text="MMM-DD-YYYY"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/showClaimDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Claim Detail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/showClaimNameATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showClaimSDATextView"
        android:layout_below="@+id/showClaimDetailTextView"
        android:layout_marginTop="10dp"
        android:text="Claim Name:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentClaimNameATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showClaimSDATextView"
        android:layout_alignLeft="@+id/showClaimDetailTextView"
        android:text="The Name of the Claim"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

</RelativeLayout>